@model IEnumerable<FlowerPower.Models.Bloem>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "Bloemen"))
{
    <input type="hidden" name="Winkelketen" value="@ViewBag.Winkelketen">
}

@foreach (var item in Model
{
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <a href="#"><img class="card-img-top" src="~/Content/Images/@item.Plaatje" /></a>
            <div class="card-body">
                <h4 class="card-title">
                    @Html.DisplayFor(modelItem => item.Naam)
                </h4>
                <h5>$@Html.DisplayFor(modelItem => item.Prijs),-</h5>
            </div>
            <div class="card-footer">
                @Html.ActionLink("Details", "Details", new { id = item.Id }) <br />
                @Html.ActionLink("Bestellen", "Winkelwagen", "Factuur", new { KlantId = ViewBag.KlantId, BloemId = item.Id, }, new { })
            </div>
        </div>
    </div>
}
